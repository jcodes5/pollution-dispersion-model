{
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist/spa",
  "env": {
    "NODE_OPTIONS": "--max-old-space-size=4096"
  },
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs20.x",
      "excludeFiles": "**/*.map"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
